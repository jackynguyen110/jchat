<style>
	@media (min-width: 991px) {
		nav, footer {
			padding-left: 320px;
		}
	}
</style>
<!DOCTYPE html>
<html>
	<head>
		<title>JJConnecting</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
		<header>
			<nav>
				<a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
				<div class="nav-wrapper">
					<a href="#" class="brand-logo">JCHAT</a>
					<ul id="nav-mobile" class="right hide-on-med-and-down">
						<li>
							<a href="/">Find More Friends</a>
						</li>
						<li>
							<%= link_to "Login", root_path if session[:user_id].nil? %>
						</li>
					</ul>
				</div>
			</nav>

		</header>
		<main>
			<div class="row" style="min-height: 900px">
				<div class="col s3">
					<ul id="slide-out" class="side-nav fixed">
						<li>
							<div class="userView">
								<div class="background">
									<img src="<%= 'http://materializecss.com/images/office.jpg' if session[:user_id].nil? %>" />
								</div>
								<a href="#!user"><%= image_tag("avatar1.jpg", class: "circle")%></a>
								<a href="#!name"><span class="white-text name">John Doe</span></a>
								<a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>
							</div>

						</li>

						<li>
							<span><strong>LIST FRIENDS</strong></span>
						</li>
						<li>
							<div class="divider"></div>
						</li>
						<li>
							<a href="#!"><i class="material-icons">cloud</i>First Link With Icon <span class="sidebar-badge">[3]</span></a>
						</li>

					</ul>
				</div>
				<div class="col s9">
					<%= yield() %>
				</div>
			</div>

		</main>

		<footer class="page-footer" style="padding-top:0px">
			<div class="footer-copyright">
				<div class="container">
					Â© 2014 Copyright Text
					<a class="grey-text text-lighten-4 right" href="#!">More Links</a>
				</div>
			</div>
		</footer>

	</body>

	<script>
		$(document).ready(function() {

			$('.button-collapse').sideNav({
				closeOnClick : true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
				draggable : true // Choose whether you can drag to open on touch screens
			});

		});
	</script>
<!DOCTYPE html>
